<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                             http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

  <!-- Servlet Definition for AuthController -->
  <servlet>
    <servlet-name>AuthController</servlet-name>
    <servlet-class>com.buysellplatform.controller.AuthController</servlet-class>
  </servlet>

  <!-- Servlet Mapping for AuthController -->
  <servlet-mapping>
    <servlet-name>AuthController</servlet-name>
    <url-pattern>/auth</url-pattern>
  </servlet-mapping>

  <!-- Servlet Definition for SellController -->
  <servlet>
    <servlet-name>SellServlet</servlet-name>
    <servlet-class>com.buysellplatform.controller.SellServlet</servlet-class>
  </servlet>

  <!-- Servlet Mapping for SellController -->
  <servlet-mapping>
    <servlet-name>SellServlet</servlet-name>
    <url-pattern>/sell</url-pattern>
  </servlet-mapping>

  <!-- More servlet definitions and mappings can go here -->

</web-app>

